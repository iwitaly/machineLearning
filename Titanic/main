import csv
import numpy as np
from sklearn.neighbors import KNeighborsClassifier
import sklearn

def readFile(fileName, indexies):
    """!
    Does something ...

    @param fileName String: name of the file to open
    @param indexies List: list with indexies to read from file

    @return Xval and Yval lists
    """

    csv_file_object = csv.reader(open(fileName, 'rb'))

    header = csv_file_object.next()  #The next() command just skips the
                                 #first line which is a header
    data=[]                          #Create a variable called 'data'
    for row in csv_file_object:      #Run through each row in the csv file
        data.append(row)             #adding each row to the data variable
    data = np.array(data) 	         #Then convert from a list to an array

    Yset = data[:, 1]
    n = len(Yset)

    A = []
    B = []

    for i in indexies:#change for more rows in furure
        A.append(data[:, i])

    for i in range(n):
        buff = []
        for j in range(3):
            buff.append(A[j][i])
        B.append(buff)

    for i in B:
        i = np.array(i)
    B = np.array(B)

    #male 1, woman 0

    for i in range(n):
        if B[i][1] == 'male':
            B[i][1] = '1'
        else:
            B[i][1] = '0'

    for i in range(len(B)):
        for j in range(len(B[i])):
            if B[i][j] == '':
                B[i][j] = '-1'

    B = B.astype(np.float)
    Yset = Yset.astype(int)
    return B, Yset

def writePredictionToFile(fileName, prediction):
    f = open(fileName,'w')
    f.write('PassengerId,Survived\n')
    count = 892
    for x in prediction:
        f.write('%d,%d\n' % (count,x))
        count += 1


Xset, Yset = readFile('train.csv', [2, 4, 5])
XsetTest, YsetTest = readFile('test.csv', [1, 3, 4])


knn = KNeighborsClassifier()
knn.fit(Xset, Yset)

YsetTest = knn.predict(XsetTest)
print sklearn.metrics.accuracy_score(Yset, knn.predict(Xset))



writePredictionToFile('results.csv', YsetTest)